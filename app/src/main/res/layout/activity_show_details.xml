<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.moviedetails.ShowDetailsActivity">
    <android.support.v7.widget.Toolbar
            android:id="@+id/show_detail_toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:elevation="4dp"
            app:titleTextColor="#fff"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageButton
                android:layout_marginStart="16dp"
                android:elevation="5dp"
                android:layout_marginTop="16dp"
                android:id="@+id/show_detail_back_button"
                android:background="@null"
                android:src="@drawable/ic_arrow_back"
                android:layout_width="32dp"
                android:layout_height="32dp"/>
        <ImageButton
                android:layout_gravity="end"
                android:layout_marginEnd="16dp"
                android:elevation="5dp"
                android:layout_marginTop="16dp"
                android:id="@+id/show_detail_trailer_button"
                android:background="@null"
                android:src="@drawable/ic_play"
                android:layout_width="32dp"
                android:layout_height="32dp"/>

    </android.support.v7.widget.Toolbar>


    <ScrollView
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/show_detail_toolbar"
            android:layout_width="match_parent"
            android:layout_height="0dp">
        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <ImageView
                    android:id="@+id/show_detail_image"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:scaleType="centerCrop"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"/>
            <TextView
                    app:layout_constraintTop_toBottomOf="@+id/show_detail_image"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/show_detail_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="18dp"
                    android:textSize="18sp"
            />
            <TextView
                    app:layout_constraintTop_toTopOf="@id/show_detail_title"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:id="@+id/show_detail_vote"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="16dp"
                    android:textSize="18sp"
            />
            <TextView
                    android:id="@+id/show_detail_status"
                    app:layout_constraintTop_toBottomOf="@id/show_detail_title"
                    app:layout_constraintStart_toStartOf="@id/show_detail_title"
                    android:alpha="0.7"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/show_detail_genres"
                    app:layout_constraintTop_toBottomOf="@id/show_detail_status"
                    app:layout_constraintStart_toStartOf="@id/show_detail_title"
                    app:layout_constraintEnd_toStartOf="@id/show_detail_vote"
                    android:textSize="15sp"
                    android:textColor="#000"
                    android:layout_marginTop="8dp"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/show_detail_seasons"
                    android:textColor="#000"
                    app:layout_constraintTop_toBottomOf="@id/show_detail_genres"
                    app:layout_constraintStart_toStartOf="@id/show_detail_genres"
                    android:textSize="15sp"
                    android:layout_marginTop="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/show_detail_episodes"
                    android:textColor="#000"
                    app:layout_constraintTop_toTopOf="@id/show_detail_seasons"
                    app:layout_constraintStart_toEndOf="@id/show_detail_seasons"
                    android:layout_marginStart="8dp"
                    android:textSize="15sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/show_detail_overview_title"
                    android:textColor="#000"
                    android:text="@string/overview"
                    app:layout_constraintStart_toStartOf="@id/show_detail_seasons"
                    app:layout_constraintTop_toBottomOf="@id/show_detail_seasons"
                    android:layout_marginTop="31dp"
                    android:textSize="24sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/show_detail_overview"
                    android:textColor="#000"
                    app:layout_constraintTop_toBottomOf="@id/show_detail_overview_title"
                    app:layout_constraintStart_toStartOf="@id/show_detail_overview_title"
                    android:textSize="15sp"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="18dp"
                    android:layout_marginEnd="18dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/show_detail_cast_title"
                    android:textColor="#000"
                    android:text="@string/cast"
                    app:layout_constraintStart_toStartOf="@id/show_detail_seasons"
                    app:layout_constraintTop_toBottomOf="@id/show_detail_overview"
                    android:layout_marginTop="31dp"
                    android:textSize="24sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <HorizontalScrollView
                    android:id="@+id/show_detail_cast_container"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toBottomOf="@id/show_detail_cast_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
            >

                <LinearLayout
                        android:id="@+id/show_detail_cast"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"/>
            </HorizontalScrollView>

            <TextView
                    android:id="@+id/show_detail_recommendation_title"
                    android:textColor="#000"
                    android:text="@string/recommendation"
                    app:layout_constraintStart_toStartOf="@id/show_detail_seasons"
                    app:layout_constraintTop_toBottomOf="@id/show_detail_cast_container"
                    android:layout_marginTop="31dp"
                    android:textSize="24sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <HorizontalScrollView
                    android:id="@+id/show_detail_recommendations_container"
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginBottom="8dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintTop_toBottomOf="@id/show_detail_recommendation_title"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
            >
                <LinearLayout
                        android:id="@+id/show_detail_recommendations"
                        android:orientation="horizontal"
                        app:layout_constraintStart_toStartOf="@id/show_detail_cast_container"
                        app:layout_constraintTop_toBottomOf="@id/show_detail_cast_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </HorizontalScrollView>

        </android.support.constraint.ConstraintLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>